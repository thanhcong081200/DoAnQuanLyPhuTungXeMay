@using Quanli_CuaHang_PTxemay.Models;
@using System.Text.RegularExpressions;
@model List<PHUTUNGXE>

<link href="~/Assert/css/StyleSheet2.css" rel="stylesheet" />
<link href="~/Assert/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<style>
    #cardd {
        display: flex;
        margin-bottom: 20px;
        flex-direction: row;
        border: none;
    }

    #card-img-top1 {
        width: 130px;
        margin-top: 5px;
        margin-left: 5px;
        border: 2px solid #000;
    }
    #card-title1 {
        font-size: 15px;
    }
    #card-body1 {
        padding:0;
        margin-top: 5px;
        margin-left: 20px;
    }
    
</style>
<div class="qtnhieu">
    @foreach (PHUTUNGXE i in Model)
    {
        <div id="cardd" class="card" style="cursor:pointer" title="@i.TENPT">
            <img id="card-img-top1" class="card-img-top" src="~/Assert/Hinh_Anh_PTX_DA/@i.HINH" alt="Card image">
            <div id="card-body1 "class="card-body">
                <h4 id="card-title1" class="card-title">@i.TENPT</h4>
                <p class="card-text">@String.Format("{0:#,##}", Convert.ToInt32(i.GIABAN))<label style="color:red;margin-left:3px;">đ</label></p>
                <a href="@Url.Action("ChitietSp","Sanpham", new {masp = i.MAPT})" class="btn btn-primary">Xem chi tiết</a>
            </div>
        </div>
    }
</div>

